/* pages/play/play.wxss */

page, .body{
    height: 100%;
}
.sing-brief{
    position: absolute;
    left: 10px;
    top: 10px;
    color: #bb4e55;

}
.sing-name{
    font-size: 20px;
    font-weight: 600;

}
.singer-name{
    font-size: 12px;

}
.sing-show{
    position: relative;
    width: 100%;
    height: 85%;
    display: flex;
    justify-content: center;
    justify-items: center;
}
.coverImgStick{
    position: absolute;
    top: 10%;
    left: 15%;
    width: 100rpx;
    height: 130rpx;
    transform: translate(-20%,-50%) rotate(-20deg);
}
.coverImgBg{
    z-index: -1;
    position: absolute;
    left: 50px;
    top: 50px;
    transform: translate(-50%,-50%);
    width: 500rpx;
    height: 500rpx;
    border-radius: 50%;
}
.coverImg{
  

    width: 400rpx;
    height: 400rpx;
    border-radius: 50%;
}
.coverImg.play{
    animation: rotate 15s linear infinite;
}
@keyframes rotate{

    0%{
        transform:rotate(0)
    }
    100%{
        transform:rotate(360deg)
    }
}